{
	"name": "@gptscript-ai/gptscript",
	"version": "v0.5.0",
	"description": "Run gptscript in node.js",
	"main": "dist/gptscript.js",
	"type": "module",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/gptscript-ai/node-gptscript.git"
	},
	"bin": {
		"gptscript": "bin/gptscript"
	},
	"scripts": {
		"pretest": "npm run install-binary",
		"install-binary": "node scripts/install-binary.js",
		"test": "jest",
		"postinstall": "node scripts/install-binary.js",
		"build": "tsc --build",
		"clean": "rm -rf dist"
	},
	"keywords": [
		"gptscript",
		"gpt",
		"AI"
	],
	"author": "Bill Maxwell <bill@acorn.io>",
	"license": "Apache-2.0",
	"dependencies": {
		"adm-zip": "^0.5.10",
		"node-downloader-helper": "^2.1.9",
		"tar": "^6.2.0"
	},
	"devDependencies": {
		"@swc/cli": "^0.3.9",
		"@swc/core": "^1.4.2",
		"@types/jest": "^29.5.12",
		"@types/node": "^20.12.7",
		"copyfiles": "^2.4.1",
		"jest": "^29.7.0",
		"ts-jest": "^29.1.2"
	},
	"jest": {
		"transform": {
			"^.+\\.ts?$": "ts-jest"
		},
		"testEnvironment": "node",
		"testRegex": "/tests/.*\\.(test|spec)?\\.(ts|tsx)$",
		"moduleFileExtensions": [
			"ts",
			"tsx",
			"js",
			"jsx",
			"json",
			"node"
		]
	}
}
